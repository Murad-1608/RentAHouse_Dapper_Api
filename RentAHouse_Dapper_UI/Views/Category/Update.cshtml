@model RentAHouse_Dapper_UI.Models.CategoryModels.UpdateCategoryModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kateqoriya yenilə</h6>
        <form method="post" asp-action="update" asp-controller="category">
            <input type="hidden" asp-for="Id" />
            <label>Kateqoriya adı</label>
            <input type="text" asp-for="Name" class="form-control" /><br />
            <input type="checkbox" id="vehicle1" name="vehicle1" asp-for="Status">
            <label for="vehicle1"> Status</label><br>
            <br />
            <button class="btn btn-primary">Təstiq et</button>
        </form>
    </div>
</div>

