@model RentAHouse_Dapper_UI.Models.ProductModels.CreateProductModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni elan</h6>
        <form method="post">
            <label>Başlıq</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Qiymət</label>
            <input type="text" asp-for="Price" class="form-control" />
            <br />
            <label>Şəhər</label>
            <input type="text" asp-for="City" class="form-control" />
            <br />
            <label>Rayon</label>
            <input type="text" asp-for="District" class="form-control" />
            <br />
            <label>Şəkil</label>
            <input type="text" asp-for="CoverImage" class="form-control" />
            <br />
            <label>Tip</label>
            <input type="text" asp-for="Type" class="form-control" />
            <br />
            <label>Kateqoriya</label>
            @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.Categories,new {@class="form-control"})
            <br />
            <button class="btn btn-primary">Təstiq et</button>
        </form>
    </div>
</div>

